  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
            <div class="pull-left"><h4>Bike Gallery</h4></div>
              <button type="button" class="close" data-dismiss="modal" title="Close">
                <span class="glyphicon glyphicon-remove"></span>
              </button>
          </div>
    <div class="modal-body">
    <!--CAROUSEL CODE GOES HERE-->
      <div id="myGallery" class="carousel slide" data-interval="false">
        <div class="carousel-inner">

          <div class="item active">
            <%= image_tag("bmx.jpg",
                          alt: "Image description here",
                          class: "img-responsive") %>
          </div>
          <div class="item">
            <%= image_tag("bridge.png",
                          alt: "Image description here", 
                          class: "img-respponsive") %>
            </div>
          <div class="item">
            <%= image_tag("centurion.jpg",
                          alt: "Image description here", 
                          class: "img-respponsive") %>
          </div>
          <div class="item">
            <%= image_tag("Journeyman.jpg",
                          alt: "Image description here", 
                          class: "img-respponsive") %>
          </div>



        </div><!--end carousel-inner-->
          <!-- Previous and Next buttons-->
          <a class="left carousel-control" href="#myGallery" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control"
            href="#myGallery" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
      </div><!--end myGallery-->
    
    </div><!--end modal-body-->
        <div class="modal-footer">
        <div class="pull-left">
        </div>
          <button class="btn-sm close" type="button" data-dismiss="modal">Close</button>
      </div><!--end modal-footer-->
    </div><!--end modal-content-->
  </div><!--end modal-dialoge-->
</div><!--end myModal-->
