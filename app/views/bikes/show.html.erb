<div class="container">
  <div class="col-lg-12 p-3 main-section">
    <div class="row m-0">
      <div class="col-lg-5 left-side-product-box pb-3" >
        <div class="bike-show">
          <% if @bike.bike_photo.attached? %>
            <%= image_tag @bike.bike_photo %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-7">
        <div class="right-side-pro-detail p-3 m-0" style= "background-color: #c8d1be">
          <div class="row">
            <div class="col-lg-12">
              <h3><%= @bike.model%></h3>
              <h1 class="m-0 p-0"><%= @bike.make%></h1>
              <br>
            </div>
            <div class="col-lg-12">
              <h4 class="m-0 p-0 price-pro">$<%= @bike.price %></h4>
              <hr class="p-0 m-0">
            </div>
            <div class="col-lg-12 pt-2">
              <h2>Product Detail</h2>
              <h4>Category: <%= @bike.category%>
                <h4>
                  <h4>Size: <%= @bike.size%>
                    <h4>
                      <h4>Year: <%= @bike.year%>
                        <h4>
                          <h4>Color: <%= @bike.color%>
                            <h4>
                              <h4>Status: <%= @bike.status%>
                                <h4>
                                  <h4>Description: <%= @bike.description%></h4>
                                  <br>
                                  <% if @bike.reviews.any? %>
                                    <h3>Reviews for this bike:</h3>
                                    <% @bike.reviews.each do |review| %>
                                      <ul>
                                        <h4>
                                          <%= link_to "#{review.rating} ⚙️ review by #{review.author}", bike_review_path(@bike, review), class: "btn btn-outline-light" %>
                                        </h4>
                                      </ul>
                                    <% end %>
                                  <% else %>
                                    <p>No reviews are listed for this bike.</p>
                                  <% end %>
                                  <hr class="m-0 pt-2 mt-2">
                                </div>
                                <div class="col-lg-12 mt-3">
                                  <div class="row">
                                    <div class="col-lg-6 pb-2">
                                      <h4>Like what you see? 👀</h4>
                                      <h4>give us a call or stop by the shop!</h4>
                                    </div>
                                    <div class="col-lg-6">
                                      <p><%= link_to "Add a review", new_bike_review_path(@bike), class: "btn btn-dark" %></p>
                                      <% if current_user && current_user.admin %>
                                        <p><%= link_to "Edit", edit_bike_path(@bike), class: "btn btn-dark" %></p>
                                      </div>
                                      <p><%= link_to "Delete", bike_path(@bike),  class: "btn btn-danger",
                          :data => {:confirm => "Are you sure you want to delete: #{@bike.name}?",
                                    :method => "delete"} %></p>
                                    <% end %>
                                    <p><%= link_to "Return to bikes", bikes_path, class: "btn btn-dark" %></p>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
